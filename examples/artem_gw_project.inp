&GLOBAL
  EXTENDED_FFT_LENGTHS TRUE
  PRINT_LEVEL LOW
  PROJECT_NAME methane_GW_PBE
  RUN_TYPE ENERGY
&END GLOBAL
&FORCE_EVAL
  METHOD QUICKSTEP
  &DFT
    POTENTIAL_FILE_NAME /home/artem/soft/cp2k/cp2k-7.1/data/POTENTIAL
    UKS FALSE
    MULTIPLICITY 1
    CHARGE 0
    BASIS_SET_FILE_NAME /home/artem/soft/cp2k/cp2k-7.1/data/BASIS_def2_QZVP_RI_ALL
    &SCF
      MAX_SCF 1
      EPS_SCF 1e-06
      SCF_GUESS RESTART
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
        ENERGY_GAP 0.001
      &END OT
    &END SCF
    &QS
      EPS_DEFAULT 1e-15
      EPS_PGF_ORB 1e-200
      METHOD GAPW
    &END QS
    &MGRID
      NGRIDS 5
      CUTOFF 900
      REL_CUTOFF 60
    &END MGRID
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &POISSON
      POISSON_SOLVER MT
      PERIODIC NONE
    &END POISSON
  &END DFT
  &SUBSYS
    &CELL
      ABC 8 8 8 
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME methane.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES 
      &END CENTER_COORDINATES
    &END TOPOLOGY
    &KIND H
      RI_AUX_BASIS_SET RI-5Z
      ELEMENT H
      POTENTIAL ALL
      BASIS_SET def2-QZVP
    &END KIND
    &KIND C
      RI_AUX_BASIS_SET RI-5Z
      ELEMENT C
      POTENTIAL ALL
      BASIS_SET def2-QZVP
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
